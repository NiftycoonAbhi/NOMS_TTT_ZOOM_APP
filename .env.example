# TTT ZOOM Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Settings
ENVIRONMENT=development
DEBUG_MODE=true

# Database Configuration
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=ttt_zoom_system

# Live Server Database Settings (uncomment for production)
# DB_HOST=your_live_db_host
# DB_USERNAME=your_live_db_user
# DB_PASSWORD=your_live_db_password
# DB_NAME=your_live_db_name

# Zoom API Settings (add your actual credentials)
# These are stored in the database zoom_api_credentials table
# This file is for documentation purposes

# Email Configuration (if needed)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=tls
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=TTT ZOOM System

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=xlsx,xls,csv

# Session Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Logging Settings
LOG_LEVEL=DEBUG
LOG_MAX_SIZE=10485760
LOG_ROTATION_COUNT=5
